<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sort">

    <application
        android:allowBackup="true"
        android:icon="@drawable/sort"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_sort_background"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.DespesasActivity" android:theme="@style/despesasTheme"></activity>
        <activity android:name=".activity.ReceitasActivity" android:theme="@style/receitasTheme"/>
        <activity
            android:name=".activity.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.CadastroActivity" />
    </application>

</manifest>